<% include ../partials/header %>
<div class="container">

    <h1 class="display-3">Edit </h1>
    <form action="/classsave" method="POST">
        <div class="form-group">
            <label for="">ID</label>
            <input type="text" value="<%= detail.idg%>" class="form-control" name="id" id=""
                aria-describedby="helpId" placeholder="">
            <small id="helpId" class="form-text text-muted">Help text</small>
        </div>
        <div class="form-group">
            <label for="">Name</label>
            <input type="text" value="<%= detail.game_name%>" class="form-control" name="name" id=""
                aria-describedby="helpId" placeholder="">
            <small id="helpId" class="form-text text-muted">Help text</small>
        </div>
        <div class="form-group">
            <label for="">price</label>
            <input type="text" value="<%= detail.price%>" class="form-control" name="price" id="" aria-describedby="helpId"
                placeholder="">
            <small id="helpId" class="form-text text-muted">Help text</small>
        </div>
        <div class="form-group">
                <label for="">Type</label>
                <input type="text" value="<%= detail.type%>" class="form-control" name="type" id="" aria-describedby="helpId"
                    placeholder="">
                <small id="helpId" class="form-text text-muted">Help text</small>
            </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
<% include ../partials/footer %>